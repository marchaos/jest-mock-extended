{
    "name": "vitest-mock-extended",
    "version": "1.0.6",
    "homepage": "https://github.com/eratio08/vitest-mock-extended",
    "description": "Type safe mocking extensions for vitest, forked from jest-mock-extended",
    "repository": {
        "type": "git",
        "url": "https://github.com/eratio08/vitest-mock-extended"
    },
    "author": "Eike Lurz <eike.lurz@tuta.io>",
    "license": "MIT",
    "types": "./lib/cjs/types/index.d.ts",
    "main": "./lib/cjs/index.js",
    "files": [
        "lib/**/*"
    ],
    "exports": {
        ".": {
            "import": {
                "types": "./lib/esm/types/index.d.ts",
                "default": "./lib/esm/index.mjs"
            },
            "require": {
                "types": "./lib/cjs/types/index.d.ts",
                "default": "./lib/cjs/index.js"
            }
        }
    },
    "release": {
        "branches": [
            "main"
        ]
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test": "pnpm test:src && pnpm test:example",
        "test:src": "vitest run --coverage",
        "test:example": "cd example && pnpm run test",
        "clean": "rimraf coverage lib",
        "build": "pnpm clean && pnpm build:types && pnpm build:rollup",
        "build:rollup": "rollup --config",
        "build:types": "tsc --emitDeclarationOnly && mkdir -p lib/cjs/types && cp -r lib/esm/types lib/cjs"
    },
    "dependencies": {
        "ts-essentials": "^9.3.0"
    },
    "devDependencies": {
        "@vitest/coverage-c8": "0.24.3",
        "esbuild": "^0.15.12",
        "prettier": "2.7.1",
        "rimraf": "3.0.2",
        "rollup": "^3.2.3",
        "rollup-plugin-esbuild": "^4.10.1",
        "semantic-release": "^19.0.5",
        "typescript": "4.8.4",
        "vite": "^3.1.8",
        "vitest": "0.24.3"
    },
    "peerDependencies": {
        "typescript": "3.x || 4.x",
        "vitest": ">=0.24.3"
    }
}
